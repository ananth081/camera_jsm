<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:color="@color/yello">
        <shape
            android:shape="oval">
            <size
                android:height="6dp"
                android:width="6dp"/>
            <solid android:color="@color/txBlack"/>

        </shape>

    </item>

    <item android:drawable="@color/txBlack"
        android:state_enabled="true"
        android:state_pressed="true"
        android:color="@color/yello">
        <shape
            android:shape="oval">
            <size android:height="6dp" android:width="6dp"/>
            <solid android:color="@color/txBlack"/>
        </shape>
    </item>


</selector>
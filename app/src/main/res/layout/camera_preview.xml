<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cancel_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/txBlack"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:gravity="bottom"
            android:text="Cancel"
            android:textColor="@color/ic_white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dualCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/flashLight"
            android:src="@drawable/switch_camera" />

        <ImageView
            android:id="@+id/flashLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/flash_circle_1" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cameraZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/transp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/camera_control"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cameraZoomText0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zoom_button_corners"
            android:gravity="center"
            android:padding="12dp"
            android:text="0x"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cameraZoomText05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zoom_button_corners"
            android:gravity="center"
            android:padding="12dp"
            android:text="0.5x"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cameraZoomText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zoom_button_corners"
            android:gravity="center"
            android:padding="12dp"
            android:text="1x"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="140dp"
        android:background="@color/ic_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancel_layout" />

    <RelativeLayout
        android:id="@+id/camera_control"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/txBlack"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <ImageView
            android:id="@+id/photo_view_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_photo" />

        <ImageView
            android:id="@+id/camera_capture_button"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="18dp"
            android:layout_toStartOf="@+id/saveText"
            android:layout_toEndOf="@+id/photo_view_button"
            android:src="@drawable/ic_shutter_normal" />

        <TextView
            android:id="@+id/saveText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:text="Save   "
            android:textColor="@color/ic_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/video"
            android:layout_alignParentTop="true"
            android:text="Photo"
            android:textColor="@color/ic_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="81dp"
            android:layout_toStartOf="@+id/saveText"
            android:text="Video"
            android:textColor="@color/ic_white"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
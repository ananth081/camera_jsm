<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="320dp"
    android:background="@color/txWhite"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/app_name"
        android:text="Do you want to publish this media now, or does it need to be reviewed"
        android:scaleType="center" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/publishRadioBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txBlack"
        android:buttonTint="#0072BC"
        android:checked="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto"
        android:textStyle="normal"
        android:text="Publish Now"/>

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/needsReviewRadioBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txBlack"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:checked="false"
        android:buttonTint="#0072BC"
        android:textStyle="normal"
        android:text="Needs review"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/txGray"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:gravity="end|bottom"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textAllCaps="true"
            android:textColor="#202020"
            android:fontFamily="@font/roboto"
            android:text="Cancel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/roboto"
            android:textColor="#0072BC"
            android:textAllCaps="true"
            android:text="Save"/>
    </LinearLayout>
</LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cancel_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/txBlack"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="19dp"
            android:translationX="14dp"
            android:text="Cancel"
            android:textColor="@color/ic_white"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/flashLight"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="2dp"
            android:visibility="visible"
            android:translationX="-60dp"
            android:layout_alignStart="@+id/dualCamera"
            android:background="@drawable/flash_circle_1"/>

        <ImageView
            android:id="@+id/dualCamera"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:translationY="3dp"
            android:translationX="-10dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_switch_camera" />


    </RelativeLayout>

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ic_white"
        android:translationY="65dp"
        app:layout_constraintBottom_toTopOf="@+id/switchCameraLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout" />

    <CheckBox
        android:id="@+id/audio_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:buttonTint="@color/ic_white"
        android:text="@string/audio"
        android:textColor="@color/txWhite"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <LinearLayout
        android:id="@+id/switchCameraLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/txBlack"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/videoControlView"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/photoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="Photo"
            android:textColor="@color/txWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/videoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/phone_photo_text_bg"
            android:clickable="true"
            android:text="Video"
            android:textColor="@color/txWhite"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cameraZoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zoom_button_corners"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationY="-50dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/switchCameraLayout">

        <Button
            android:id="@+id/tvZoomOne"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/zoom_button_bg"
            android:foreground="#00555555"
            android:gravity="center"
            android:padding="2dp"
            android:text="1x"
            android:textColor="@color/txBlack"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tvZoomTwo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp"
            android:background="#00555555"
            android:foreground="#00555555"
            android:gravity="center"
            android:padding="2dp"
            android:text="2x"
            android:textColor="@color/txWhite"
            android:textSize="12sp" />

        <Button
            android:id="@+id/cameraZoomText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00555555"
            android:foreground="#00555555"
            android:gravity="center"
            android:padding="12dp"
            android:text="2.0x"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quality_selection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerVertical="false"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:choiceMode="singleChoice"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/videoControlView"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
        app:layout_constraintTop_toTopOf="@id/audio_selection" />

    <RelativeLayout
        android:id="@+id/videoControlView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/txBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle"
            android:contentDescription="@string/camera"
            android:outlineProvider="background"
            android:translationX="18dp"
            android:translationY="20dp"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_record"
            android:contentDescription="@string/capture"
            android:translationY="5dp"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:id="@+id/recordLayout"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/video_rec_bg"
            android:orientation="horizontal"
            android:translationY="4dp"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_stop_24"
                android:contentDescription="@string/stop"
                android:translationX="10dp"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/pause_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_pause_24"
                android:contentDescription="@string/pause"
                android:translationX="40dp"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/saveText"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_save_text"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/txWhite"
            android:textSize="16sp"
            android:translationY="3dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/capture_status"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_video_capture_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/txWhite"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <FrameLayout
        android:id="@+id/place_holder_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/txBlack"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/place_holder_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/outline_videocam_24" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

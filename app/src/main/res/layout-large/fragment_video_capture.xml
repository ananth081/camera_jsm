<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txBlack">

    <include
        android:id="@+id/cancel_layout"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        layout="@layout/camera_cancel_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">
    </include>

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/ic_white"
        app:layout_constraintBottom_toTopOf="@+id/switchCameraLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout" />

    <CheckBox
        android:id="@+id/audio_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:buttonTint="@color/ic_white"
        android:text="@string/audio"
        android:textColor="@color/txWhite"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <FrameLayout
        android:id="@+id/zoomControls"
        android:layout_width="32dp"
        android:layout_height="75dp"
        android:layout_marginBottom="50dp"
        android:translationX="45dp"
        android:visibility="gone"
        android:background="@drawable/zoom_button_corners"
        app:layout_constraintBottom_toTopOf="@+id/switchCameraLayout"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout">

        <View
            android:id="@+id/zoomToggleBg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/zoom_button_bg" />

        <TextView
            android:id="@+id/tvZoomOne"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:layout_marginStart="1dp"
            android:foreground="#00555555"
            android:gravity="center"
            android:text="2x"
            android:textAllCaps="false"
            android:textColor="@color/txBlack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvZoomTwo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#00555555"
            android:foreground="#00555555"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:text="1x"
            android:textAllCaps="false"
            android:textColor="@color/txBlack"
            android:textSize="12sp" />


    </FrameLayout>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/zoomSlider"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/switchCameraLayout"
        app:layout_constraintEnd_toStartOf="parent"
        android:translationX="45dp"
        android:textAlignment="center"
        android:rotation="270"
        android:thumbTint="@color/txWhite"
        android:progressTint="@color/txWhite"
        android:background="@drawable/zoom_slider_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout"/>

    <LinearLayout
        android:id="@+id/switchCameraLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center|top"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/photoBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="Photo"
            android:textColor="@color/txWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/videoBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/phone_photo_text_bg"
            android:clickable="true"
            android:foreground="@color/transparent"
            android:text="Video"
            android:textColor="@color/txWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/txBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quality_selection"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerVertical="false"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:choiceMode="singleChoice"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/videoControlView"
        app:layout_constraintStart_toEndOf="@+id/vertical_guideline"
        app:layout_constraintTop_toTopOf="@id/audio_selection" />

    <RelativeLayout
        android:id="@+id/videoControlView"
        android:layout_width="100dp"
        android:translationY="50dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout">

        <ImageView
            android:id="@+id/dualCamera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_above="@id/capture_button"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_switch_camera"
            android:foreground="#00555555" />

        <ImageButton
            android:id="@+id/capture_button"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_above="@+id/video_preview_image"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_record"
            android:contentDescription="@string/capture"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:id="@+id/video_preview_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_placeholder_img"
            android:contentDescription="@string/camera"
            android:outlineProvider="background"
            tools:ignore="ImageContrastCheck" />


        <LinearLayout
            android:id="@+id/recordLayout"
            android:layout_width="52dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/video_rec_bg"
            android:orientation="vertical"
            android:translationY="-60dp"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_stop_24"
                android:contentDescription="@string/stop"
                android:scaleType="fitCenter"
                android:translationY="10dp"
                tools:ignore="ImageContrastCheck" />

            <ImageButton
                android:id="@+id/pause_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_pause_24"
                android:contentDescription="@string/stop"
                android:translationY="40dp"
                tools:ignore="ImageContrastCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/saveText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@id/video_preview_image"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_save_text"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="true"
            android:textColor="@color/txWhite"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/capture_status"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_video_capture_bg"
        android:textColor="@color/txWhite"
        android:padding="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/cancel_layout" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <FrameLayout
        android:id="@+id/place_holder_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/txBlack"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/place_holder_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/outline_videocam_24" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
